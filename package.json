{
  "name": "starter-component",
  "version": "0.0.0",
  "description": "Webcomponent starter-component following open-wc recommendations",
  "author": "starter-component",
  "license": "MIT",
  "main": "index.js",
  "module": "index.js",
  "scripts": {
    "build": "webpack --mode production",
    "builddev": "webpack --mode development",
    "start": "webpack serve --mode development",
    "lint:eslint": "eslint --ext .js,.html . --ignore-path .gitignore",
    "format:eslint": "eslint --ext .js,.html . --fix --ignore-path .gitignore",
    "lint:prettier": "prettier \"**/*.js\" --check --ignore-path .gitignore",
    "format:prettier": "prettier \"**/*.js\" --write --ignore-path .gitignore",
    "lint": "npm run lint:eslint && npm run lint:prettier",
    "format": "npm run format:eslint && npm run format:prettier",
    "test": "web-test-runner --coverage",
    "test:watch": "web-test-runner --watch",
    "storybook": "start-storybook",
    "storybook:build": "build-storybook"
  },
  "dependencies": {
    "lit-html": "^1.1.2",
    "lit-element": "^2.2.1"
  },
  "devDependencies": {
    "@open-wc/demoing-storybook": "^2.0.0",
    "@open-wc/eslint-config": "^4.0.0",
    "@open-wc/testing": "^2.0.0",
    "@researchgate/babel-plugin-transform-scss-import-to-string": "^1.0.0",
    "@web/dev-server": "^0.0.12",
    "@web/test-runner": "^0.7.41",
    "clean-webpack-plugin": "^3.0.0",
    "css-loader": "^5.0.1",
    "eslint": "^6.1.0",
    "eslint-config-prettier": "^6.11.0",
    "extract-loader": "^5.1.0",
    "html-webpack-plugin": "^4.5.0",
    "husky": "^1.0.0",
    "lint-staged": "^10.0.0",
    "lit-scss-loader": "^1.0.1",
    "node-sass": "^5.0.0",
    "prettier": "^2.0.4",
    "sass-loader": "^10.1.0",
    "webpack": "^5.4.0",
    "webpack-cli": "^4.2.0",
    "webpack-dev-server": "^3.11.0"
  },
  "eslintConfig": {
    "extends": [
      "@open-wc/eslint-config",
      "eslint-config-prettier"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  }
}
